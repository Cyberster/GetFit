<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.w3epic.getfit.Activities.WeightLogActivity"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bmi">

    <TextView
        android:id="@+id/tvWeightLogState"
        android:text="60.0 kg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="64sp"
        android:gravity="center"
        android:background="@drawable/weightlog_details"
        android:padding="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btnDelWeight"
            android:background="@drawable/minus_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="64sp"
            android:layout_gravity="center_vertical"
            android:onClick="btnDelWeightOnClickHandler"/>

        <EditText
            android:id="@+id/etCurrentWeight"
            android:hint="60.0"
            android:text="60.0"
            android:textSize="64sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/weight_count"
            android:padding="10dp"/>

        <Button
            android:id="@+id/btnAddWeight"
            android:background="@drawable/plus_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="64sp"
            android:layout_gravity="center_vertical"
            android:onClick="btnAddWeightOnClickHandler"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvTargetWeight"
        android:text="Target weight 70 kg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/weight_target" />

    <Button
        android:id="@+id/btnAddWeightToLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/addweight_btn"
        android:onClick="btnAddWeightToLogOnClickHandler" />

</LinearLayout>
