<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.w3epic.getfit.Activities.AboutUsActivity"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bmi">


    <ImageView
        android:layout_width="151dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:background="@drawable/icon_text"
        android:padding="16dp" />

    <TextView
        android:id="@+id/tvAboutUs"
        android:layout_width="match_parent"
        android:layout_height="336dp"
        android:maxLines="20"
        android:paddingVertical="16dp"
        android:scrollbars="vertical"
        android:text="@string/demo_text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:background="@drawable/contactus_btn"
        android:onClick="btnContactUsOnClickHandler" />

</LinearLayout>
