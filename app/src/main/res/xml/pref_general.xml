<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:title="@string/pref_units_label"
        android:key="@string/pref_units_key"
        android:defaultValue="@string/pref_units_default"
        android:entries="@array/pref_units_options"
        android:entryValues="@array/pref_units_values"/>

    <EditTextPreference
        android:title="@string/pref_weight_goal_label"
        android:key="@string/pref_weight_goal_key"
        android:defaultValue="@string/pref_weight_goal_default"
        android:inputType="number"
        android:singleLine="true"/>

    <EditTextPreference
        android:title="@string/pref_water_goal_label"
        android:key="@string/pref_water_goal_key"
        android:defaultValue="@string/pref_water_goal_default"
        android:inputType="number"
        android:singleLine="true"/>

    <EditTextPreference
        android:title="@string/pref_body_fat_percentage_goal_label"
        android:key="@string/pref_body_fat_percentage_goal_key"
        android:defaultValue="@string/pref_body_fat_percentage_goal_default"
        android:inputType="number"
        android:singleLine="true"/>

    <EditTextPreference
        android:title="@string/pref_step_goal_label"
        android:key="@string/pref_step_goal_key"
        android:defaultValue="@string/pref_step_goal_default"
        android:inputType="number"
        android:singleLine="true"/>

</PreferenceScreen>